<!-- 요일정보: 수요일 -->
	<script type="text/javascript">
		//오늘날짜:____년____월____일____요일
	today=new Date();
	weekday=["일요일","월요일","화요일","수요일","목요일","금요일","토요일"];//배열을 담을 변수를 선언하는 방법
	document.write("<h2>"+ today.toLocaleDateString()+" "+weekday[today.getDay()]+"</h2>");

	
	
	</script>

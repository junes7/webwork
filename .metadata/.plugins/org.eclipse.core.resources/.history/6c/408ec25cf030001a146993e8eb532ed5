<!-- 자바스크립트를 사용하는 방법 -->
<!DOCTYPE html>
<html>
<head>
	<meta charset="EUC-KR">
	<title>Insert title here</title>
	<script type="text/javascript">
		/* 2. head태그 안에 function을 정의하고 사용하는 방법 */
		function test(){
			alert("테스트 중 - 자바스크립트 사용방법");
			/* alert는 대화상자를 출력하는 명령어이다. */
		}
	</script>
	<script type="text/javascript" src="http://127.0.0.1:8088/clientweb/common/js/test.js">
	
	</script>
</head>
<body>
	<!-- 1. body태그 안에 직접 정의 -->
	<script type="text/javascript">
		//한 줄 주석
		/* 자바와 동일한 여러 줄 주석 */
		/* document.write는 다른 문서들을 뭉게고 출력하기 때문에 쓰지 않는다. */
		document.write("<h1>브라우저에 데이터 출력하기 - 연습용</h1>");
		test();//자바의 메소드 호출방법과 동일하다.
		test2();
	</script>
	<!-- 3. 태그 내부에서 inline으로 사용하는 방법 : 이벤트 핸들러에 연결 -->
	<!--  마우스를 올리면 메뉴가 튀어 나오거나 검색창에서 검색하면 자동완성 되는 것들이 AJAX 기반이고 다 javascript기반으로 만들어진다. -->
	<input type="button" value="자바스크립트 실행하기" onclick="alert('안녕')">
	<input type="button" value="자바스크립트 함수 호출" onclick="test()">
	<!-- 4. 외부문서로 작성하고 호출하기 -->
	
</body>
</html>
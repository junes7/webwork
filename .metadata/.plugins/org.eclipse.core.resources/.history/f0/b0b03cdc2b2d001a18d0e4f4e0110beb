	<!--밑에 form 양식에서 action 과 메소드는 매우 중요하다. -->
	<!--  <form action="" method="get"> -->
	<!--get방식은 id와 password가 다 url 주소에 묻어가는 방식이라 보안에 약하다.-->
	<form action="/clientweb/member/login.jsp" method="post">
	
		<h2>1. 텍스트 관련 태그</h2>
		아이디:<input type="text" name="id" size="100" maxlength="20"/></br>
		패스워드:<input type="password" name="pass"><br/>
		
		<h2>2. 버튼 관련 태그</h2>
		<input type="submit" value="서버로 전송하기">
		<input type="reset" value="취소하기">
		<input type="button" value="자바스크립트연결하는버튼"
			   onclick="alert('환영합니다.')"/>
	</form>

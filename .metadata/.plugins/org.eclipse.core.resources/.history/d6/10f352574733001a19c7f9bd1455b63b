	<script type="text/javascript">
		//윈도우가 로딩될때 익명의 함수를 실행해라
		window.onload = function() {
			//페이지가 로딩되면 btndomtest객체 이벤트를 연결해라.
			//=> btndomtest에 클릭이벤트가 발생되면 domTest함수를 호출할 
			//수 있도록 연결한다.
			/* alert("안녕~~~~");
			domTest; */
			document.getElementById("btndomtest").onclick=domTest; //callback으로 사용하는 경우
			//callback은 인터프리터가 읽어들였을때 바로 함수를 호출해 실행하는 것이 아니라
			//어떤 클릭의 상황이 발생했을 때 뒷 단에서 실행이 된다. 함수명으로만 정의해준다.
/* 			document.getElementById("btninsert").onclick=function(){ //표현식으로 사용하는 경우
				alert("insert");
			} */
			document.getElementById("nodetest").onclick=domTest2;
			
		}
		function domTest(){
			//alert("domTest......")
			//div태그 목록을 가져온다. - NodeList를 반환(배열)
			//getElementsByTagName은 노드의 구조와 상관없이
			//해당 태그를 모두 찾는다.
			nodelist = document.getElementsByTagName("div");
			alert(nodelist);
			alert("div노드의 갯수=>"+nodelist.length);
			//[object HTMLCollection]: HTML 여러 태그 요소를 모아놓은 것이다.
			//이 요소들이 배열로 관리된다.
			//getAttribute는 노드(엘리먼트,태그)에 정의된 속성의 값을 리턴
			//	 			    ------
			//모든 공백들이 하위 요소들 중 하나라고 생각하면 된다. 그래서 웹 페이지를 구성할 때
			//공백 요소들도 고려를 해야 한다.
			for(i=0;i<nodelist.length;i++){
				alert("id속성=>"+nodelist[i].getAttribute("id"));
				if(nodelist[i].getAttribute("id")=="domtestbtn"){
					alert("양식태그");
					alert(nodelist[i].firstChild.nodeName+","
							+nodelist[i].firstChild.nodeValue);
				}
			}
		}
		//domTest2에 노드의 탐색을 연습할 수 있도록 코드를 작성하세요.
		//1. id가 myformId인 요소의 자식노드를 구하고 자식노드의 갯수를 alert하기
		//2. 자식노드를 탐색하고 자식노드의 id가 imginsert이면 노드의 이름을 출력하기
		function domTest2(){
			myform =document.getElementById("myformId");
			nodelist = myform.childNodes;
			alert("자식노드의 갯수=>"+nodelist.length);
/* 			for(i=0;i<nodelist.length;i++){
				alert("id속성=>"+nodelist[i].getAttribute("id"));
				if(nodelist[i].getAttribute("id")=="imginsert"){
					alert("양식태그");
					alert(nodelist[i].firstChild.nodeName+","
							+nodelist[i].firstChild.nodeValue);
				}
			} */
		}
		
	</script>
